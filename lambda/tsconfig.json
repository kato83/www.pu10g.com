{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "noImplicitAny": false,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "Node",
    "strict": true,
    "noEmit": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "declaration": false,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": [
        "@types/*"
      ]
    }
  },
  "exclude": [
    "node_modules/",
    "layer/"
  ],
  "include": [
    "./**/*.ts",
    "./types/**/*.d.ts"
  ]
}
